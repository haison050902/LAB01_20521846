<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80sp"
                android:height="80sp"
                android:gravity="center"
                android:text="Row"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="80sp"
                    android:height="80sp"
                    android:background="@color/teal_700" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="80sp"
                    android:height="80sp"
                    android:background="@color/teal_200" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="80sp"
                    android:height="80sp"
                    android:background="@color/purple_200" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80sp"
                android:height="80sp"
                android:gravity="center"
                android:text="Column"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80sp"
                android:height="80sp"
                android:background="@color/teal_700" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80sp"
                android:height="80sp"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80sp"
                android:height="80sp"
                android:background="@color/purple_200" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100sp"
                android:height="80sp"
                android:gravity="center"
                android:text="GridView"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:columnCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
            app:rowCount="2">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_margin="5sp"
                android:background="#44B1A6"
                android:text="He'd have you all unravel at the" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_margin="5sp"
                android:background="#21C880"
                android:text="Heed not the rabble" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_margin="5sp"
                android:background="#BDAE49"
                android:text="Sound of screams but the" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_margin="5sp"
                android:background="@color/teal_200"
                android:text="Who scream" />

        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout1">

            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/textView16"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:text="ListView" />

            <ListView
                android:id="@+id/listViewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ListView
                android:id="@+id/listViewId1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ListView
                android:id="@+id/listViewId2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
